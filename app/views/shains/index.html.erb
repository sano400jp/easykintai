<%- model_class = Shain -%>
<div class="page-header">
  <h1>社員マスタメンテナンス</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>社員番号</th>
      <th>氏名</th>
      <th>氏名かな</th>
      <th>ログインID</th>
      <th>ログインPW</th>
      <th>社員区分</th>
      <th>在籍</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shains.each do |shain| %>
      <tr>
        <td><%= shain.no %></td>
        <td><%= shain.name %></td>
        <td><%= shain.name_kana %></td>
        <td><%= shain.login_id %></td>
        <td><%= shain.login_pw %></td>
        <td><%= shain.shain_kbn %></td>
        <td><%= shain.zaiseki_flg %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shain_path(shain), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shain_path(shain),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shain_path,
            :class => 'btn btn-primary' %>
