<%- model_class = Shain -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:no) %>:</strong></dt>
  <dd><%= @shain.no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @shain.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_kana) %>:</strong></dt>
  <dd><%= @shain.name_kana %></dd>
  <dt><strong><%= model_class.human_attribute_name(:login_id) %>:</strong></dt>
  <dd><%= @shain.login_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:login_pw) %>:</strong></dt>
  <dd><%= @shain.login_pw %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shain_kbn) %>:</strong></dt>
  <dd><%= @shain.shain_kbn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zaiseki_flg) %>:</strong></dt>
  <dd><%= @shain.zaiseki_flg %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              shains_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shain_path(@shain), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shain_path(@shain),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
