<%= form_for @holiday, :html => { :class => "form-horizontal holiday" } do |f| %>

  <% if @holiday.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@holiday.errors.count, "error") %> prohibited this holiday from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @holiday.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "日付", :class => 'control-label col-md-1 col-lg-1' %>
    <div class="col-md-4 col-lg-4">
      <div class="row">
        <div class="col-md-4 col-lg-4">
          <div class="row">
            <div class="col-md-8 col-lg-8">
              <%= f.text_field :yyyy, :class => 'form-control', :maxlength => '4' %>
            </div>
            <div class="col-md-1 col-lg-1">
              <div class="row"><div class="text-left" style="line-height: 2.5;">年</div></div>
            </div>
          </div>
        </div>
        <div class="col-md-3 col-lg-3">
          <div class="row">
            <div class="col-md-8 col-lg-8">
              <%= f.text_field :mm,   :class => 'form-control', :maxlength => '2' %>
            </div>
            <div class="col-md-3 col-lg-3">
              <div class="row"><div class="text-left" style="line-height: 2.5;">月</div></div>
            </div>
          </div>
        </div>
        <div class="col-md-3 col-lg-3">
          <div class="row">
            <div class="col-md-8 col-lg-8">
              <%= f.text_field :dd,   :class => 'form-control', :maxlength => '2' %>
            </div>
            <div class="col-md-3 col-lg-3">
              <div class="row"><div class="text-left" style="line-height: 2.5;">日</div></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%=f.error_span(:yyyy) %>
    <%=f.error_span(:mm) %>
    <%=f.error_span(:dd) %>
  </div>
  <div class="form-group">
    <%= f.label "祭日", :class => 'control-label col-md-1 col-lg-1' %>
    <div class="col-md-3 col-lg-3">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-1 col-lg-10">
      <%= f.submit "登録", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                holidays_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
